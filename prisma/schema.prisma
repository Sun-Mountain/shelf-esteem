
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("process.env.POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("process.env.POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  email     String    @unique
  username  String    @unique
  password  String
  image     String?
  role      Role      @default(USER)
}

enum Role {
  USER
  BETA
  MOD
  ADMIN
}
